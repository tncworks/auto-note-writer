# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here
AMAZON_ASSOCIATE_TAG=your_associate_tag_here
AMAZON_REGION=us-east-1

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# note.com credentials
NOTE_EMAIL=your_note_email@example.com
NOTE_PASSWORD=your_note_password_here

# Google Cloud Platform
GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Application settings
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Scheduling
POSTING_TIME=09:00
TIMEZONE=Asia/Tokyo

# Content settings
MAX_PRODUCTS_PER_POST=3
MIN_REVIEW_RATING=4.0
PREFERRED_CATEGORIES=Home,Electronics,Fashion

# Rate limiting
AMAZON_API_RATE_LIMIT=10
OPENAI_API_RATE_LIMIT=60
NOTE_POST_INTERVAL=24